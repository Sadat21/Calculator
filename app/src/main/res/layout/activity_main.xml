<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brain.Calculator.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="150dp"
        android:id="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/Display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:textIsSelectable="false"
            android:textSize="36sp" />
    </FrameLayout>

    <GridLayout
        android:layout_width="396dp"
        android:layout_height="433dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="0.25">

        <Button
            android:id="@+id/num8"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@android:color/holo_green_light"
            android:text="8"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num9"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@android:color/holo_green_light"
            android:text="9"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num7"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@android:color/holo_green_light"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num6"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@android:color/holo_green_light"
            android:text="6"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num1"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@android:color/holo_green_light"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num0"
            android:layout_width="198.4dp"
            android:layout_height="86.6dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:background="@android:color/holo_green_light"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/opEqual"
            android:layout_width="297dp"
            android:layout_height="86.6dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_row="4"
            android:background="@android:color/holo_green_light"
            android:text="="
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num5"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@android:color/holo_green_light"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num2"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@android:color/holo_green_light"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num3"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@android:color/holo_green_light"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/opClear"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@android:color/holo_blue_bright"
            android:text="C"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible"
            tools:layout_editor_absoluteX="548dp"
            tools:layout_editor_absoluteY="252dp" />

        <Button
            android:id="@+id/Decimal"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="2"
            android:layout_row="3"
            android:background="@android:color/holo_green_light"
            android:text="."
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/num4"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@android:color/holo_green_light"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/opAdd"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="3"
            android:layout_row="4"
            android:background="@android:color/holo_blue_bright"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/opSub"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="3"
            android:layout_row="3"
            android:background="@android:color/holo_blue_bright"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/opMulti"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@android:color/holo_blue_bright"
            android:text="*"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/opDivide"
            android:layout_width="99dp"
            android:layout_height="86.6dp"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@android:color/holo_blue_bright"
            android:text="/"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:typeface="normal"
            android:visibility="visible" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
</layout>